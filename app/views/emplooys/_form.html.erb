<%= form_for @emplooy, :html => { :class => "form-horizontal emplooy" } do |f| %>

    <% if @emplooy.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@emplooy.errors.count, "error") %> prohibited this emplooy from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @emplooy.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
